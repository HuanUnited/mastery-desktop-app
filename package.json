{
  "name": "mastery-learning-app",
  "version": "1.0.0",
  "description": "Offline desktop app for systematic learning through deliberate practice",
  "author": "Duong Cong Huan",
  "license": "MIT",
  "main": "electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "electron:dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "prebuild": "npx electron-rebuild -f -w better-sqlite3",
    "electron:build": "electron-builder --win --x64"
  },
  "build": {
    "appId": "com.masterylearning.app",
    "productName": "Mastery Learning App",
    "npmRebuild": false,
    "asar": false,
    "directories": {
      "output": "dist-installer"
    },
    "files": [
      "electron/**/*",
      "dist/**/*",
      "package.json",
      "node_modules/better-sqlite3/**/*"
    ],
    "win": {
      "target": "dir"
    }
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.2",
    "@tailwindcss/postcss": "^4.1.18",
    "@tailwindcss/typography": "^0.5.19",
    "@vitejs/plugin-react": "^4.7.0",
    "autoprefixer": "^10.4.23",
    "concurrently": "^8.2.2",
    "electron": "^28.3.3",
    "electron-builder": "^24.13.3",
    "electron-rebuild": "^3.2.9",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.1",
    "tailwindcss-animate": "^1.0.7",
    "vite": "^5.4.21",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slot": "^1.2.4",
    "better-sqlite3": "^12.5.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "lucide-react": "^0.562.0",
    "react": "^19.2.3",
    "react-calendar-heatmap": "^1.10.0",
    "react-day-picker": "^9.13.0",
    "react-dom": "^19.2.3",
    "recharts": "^3.6.0",
    "tailwind-merge": "^3.4.0"
  }
}